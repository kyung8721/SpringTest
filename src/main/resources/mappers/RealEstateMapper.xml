<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace = "com.kyung.spring.test.realEstate.repository.RealEstateRepository">
 	<select id = "selectRealEstate"
 	resultType = "com.kyung.spring.test.realEstate.domain.RealEstate"
 	parameterType="int">
 		SELECT
 			`id`
 			, `realtorId`
 			, `address`
 			, `area`
 			, `type`
 			, `price`
 			, `rentPrice`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 			id = #{id}
 	</select>
 	
 	<select id = "selectRealEstateRent"
 	resultType="com.kyung.spring.test.realEstate.domain.RealEstate"
 	parameterType="int">
	 		SELECT
	 			`id`
	 			, `realtorId`
	 			, `address`
	 			, `area`
	 			, `type`
	 			, `price`
	 			, `rentPrice`
	 			, `createdAt`
	 			, `updatedAt`
	 		FROM
	 			`real_estate`
	 		WHERE
	 			<![CDATA[`rentPrice` < #{rent}]]>
 	
 	</select>
 	
 	<select id="selectRealEstateAP"
 	resultType = "com.kyung.spring.test.realEstate.domain.RealEstate"
 	parameterType="int">
 			SELECT
	 			`id`
	 			, `realtorId`
	 			, `address`
	 			, `area`
	 			, `type`
	 			, `price`
	 			, `rentPrice`
	 			, `createdAt`
	 			, `updatedAt`
	 		FROM
	 			`real_estate`
	 		WHERE
	 			<![CDATA[
	 				`area` >= #{area}
	 				AND `price` <= #{price}
	 				AND	`type` = '매매'
	 			]]>
 	</select>
 	
 	<insert id="insertRealEstate" parameterType="com.kyung.spring.test.realEstate.domain.RealEstate">
 		INSERT
 			`real_estate`
		(
			`realtorId`
			, `address`
			, `area`
			, `type`
			, `price`
		)
 		VALUE
 		(
 			#{realtorId}
 			, #{address}
 			, #{area}
 			, #{type}
 			, #{price}
 		)
 	
 	
 	</insert>
 	
 	<insert id="insertRealEstateByParameter" parameterType = "map">
 		INSERT
 			`real_estate`
 		(
 			`realtorId`
 			, `address`
 			, `area`
 			, `type`
 			, `price`
 			, `rentPrice`
 		)
 		VALUE
 		(
 			#{realtorId}
 			, #{address}
 			, #{area}
 			, #{type}
 			, #{price}
 			, #{rentPrice}
 		)
 	
 	
 	</insert>
 	
 	<update id="updateRealEstate" parameterType="com.kyung.spring.test.realEstate.domain.RealEstate">
 		UPDATE
 			`real_estate`
 		SET
 			`type` = #{type}
 			, `price` = #{price}
 			, `updatedAt` = now()
 		 WHERE
 		 	`id` = #{id}
 	
 	</update>
 
 </mapper>